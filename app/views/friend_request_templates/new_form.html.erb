<h1>
  Add a new friend request
</h1>


<hr>

<form action="/create_friend_request" method="post">

  <input type="hidden" name="sender_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <%= select_tag(:recipient_id, options_from_collection_for_select(User.all, :id, :username, @friend_request.recipient_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create friend request
  </button>
</form>

<hr>

<a href="/friend_requests">
  Go back
</a>
