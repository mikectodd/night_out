<h1>
  Add a new friend request
</h1>


<hr>

<!-- Form friend_request start -->
<form action="/create_friend_request" method="post">
<!-- Form friend_request end -->

  <!-- Label and input for sender_id start -->
  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <!-- Input for sender_id start -->
    <input type="text" id="sender_id" name="sender_id" class="form-control">
    <!-- Input for sender_id end -->
  </div>
  <!-- Label and input for sender_id end -->

  <!-- Label and input for recipient_id start -->
  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <!-- Input for recipient_id start -->
    <input type="text" id="recipient_id" name="recipient_id" class="form-control">
    <!-- Input for recipient_id end -->
  </div>
  <!-- Label and input for recipient_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create friend request
  </button>
</form>

<hr>

<a href="/friend_requests">
  Go back
</a>
