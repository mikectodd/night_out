<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Friend request #<%= @friend_request.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/friend_requests" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @friend_request.sender %>
          <a href="/friend_requests/<%= @friend_request.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit friend_request
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @friend_request.sender %>
          <a href="/delete_friend_request/<%= @friend_request.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete friend_request
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Sender
      </dt>
      <dd>
        <% if @friend_request.sender.present? %>
          <a href="/users/<%= @friend_request.sender_id %>">
            <%= @friend_request.sender.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Recipient
      </dt>
      <dd>
        <% if @friend_request.recipient.present? %>
          <a href="/users/<%= @friend_request.recipient_id %>">
            <%= @friend_request.recipient.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@friend_request.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@friend_request.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

