<h1>
  Add a new attendence
</h1>


<hr>

<form action="/create_attendence" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="restaurant_id">
      Restaurant
    </label>

    <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name, @attendence.restaurant_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="bar_id">
      Bar
    </label>

    <%= select_tag(:bar_id, options_from_collection_for_select(Bar.all, :id, :name, @attendence.bar_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="friend_id">
      Friend
    </label>

    <%= select_tag(:friend_id, options_from_collection_for_select(Friend.all, :id, :created_at, @attendence.friend_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create attendence
  </button>
</form>

<hr>

<a href="/attendences">
  Go back
</a>
