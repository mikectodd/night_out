<!-- Validation failure messages -->
<% if @attendence.errors.any? %>
  <% @attendence.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit attendence #<%= @attendence.id %>
</h1>

<hr>

<!-- Form attendence start -->
<form action="/update_attendence/<%= @attendence.id %>" method="post">
<!-- Form attendence end -->

  <!-- Label and input for user_id start -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for restaurant_id start -->
  <div class="form-group">
    <label for="restaurant_id">
      Restaurant
    </label>

    <!-- Input for restaurant_id start -->
    <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name, @attendence.restaurant_id), :class => "form-control") %>
    <!-- Input for restaurant_id end -->
  </div>
  <!-- Label and input for restaurant_id end -->

  <!-- Label and input for bar_id start -->
  <div class="form-group">
    <label for="bar_id">
      Bar
    </label>

    <!-- Input for bar_id start -->
    <%= select_tag(:bar_id, options_from_collection_for_select(Bar.all, :id, :name, @attendence.bar_id), :class => "form-control") %>
    <!-- Input for bar_id end -->
  </div>
  <!-- Label and input for bar_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update attendence
  </button>
</form>

<hr>

<a href="/attendences">
  Go back
</a>
