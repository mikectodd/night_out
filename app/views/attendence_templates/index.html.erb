<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All attendences
    </h1>

    <a href="/attendences/new" class="btn btn-block btn-outline-secondary">
      Add a new attendence
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "attendence_templates/attendences_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Restaurant
        </th>

        <th>
          Bar
        </th>

        <th>
          Friend
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @attendences.each do |attendence| %>
      <tr>
        <td>
          <%= attendence.id %>
        </td>

        <td>
          <% if attendence.user.present? %>
            <a href="/users/<%= attendence.user.id %>">
              <%= attendence.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <% if attendence.restaurant.present? %>
            <a href="/restaurants/<%= attendence.restaurant.id %>">
              <%= attendence.restaurant.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if attendence.bar.present? %>
            <a href="/bars/<%= attendence.bar.id %>">
              <%= attendence.bar.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if attendence.friend.present? %>
            <a href="/friends/<%= attendence.friend.id %>">
              <%= attendence.friend.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(attendence.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(attendence.updated_at) %> ago
        </td>

        <td>
          <a href="/attendences/<%= attendence.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @attendences, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
