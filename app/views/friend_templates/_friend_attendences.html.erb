<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attendences

    <a data-toggle="collapse" href="#friend_attendences_new_form">
      Add attendence
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @friend.attendences.each do |attendence| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/attendences/<%= attendence.id %>">
          <%= attendence.created_at %>
        </a>

        <%if current_user == attendence.user %>
          <a href="/delete_attendence_from_friend/<%= attendence.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="friend_attendences_new_form">
        <%= render partial: "friend_templates/friend_attendences_new_form" %>
      </div>
    </div>

  </ul>
</div>
