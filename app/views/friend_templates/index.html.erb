<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All friends
    </h1>

    <a href="/friends/new" class="btn btn-block btn-outline-secondary">
      Add a new friend
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "friend_templates/friends_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Friend
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>
        <td>
          <%= friend.id %>
        </td>

        <td>
          <% if friend.user.present? %>
            <a href="/users/<%= friend.user.id %>">
              <%= friend.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(friend.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(friend.updated_at) %> ago
        </td>

        <td>
          <a href="/friends/<%= friend.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @friends, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
