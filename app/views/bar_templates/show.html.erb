<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bar #<%= @bar.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/bars" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/bars/<%= @bar.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit bar
        </a>
      </div>

      <div class="col">
        <a href="/delete_bar/<%= @bar.id %>" class="btn btn-block btn-outline-secondary">
          Delete bar
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @bar.name %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <div>
          <%= render partial: "bar_templates/one_photo_map" %>
        </div>
      </dd>

      <dt>
        Drink deal
      </dt>
      <dd>
        <%= @bar.drink_deal %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@bar.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@bar.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bar_templates/bar_attendees" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bar_templates/bar_reviews" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bar_templates/bar_friends_going" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bar_templates/bar_confirmed_guests" %>
  </div>
</div>
