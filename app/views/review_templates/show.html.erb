<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Review #<%= @review.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/reviews" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @review.visitor %>
          <a href="/reviews/<%= @review.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit review
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @review.visitor %>
          <a href="/delete_review/<%= @review.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete review
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Body
      </dt>
      <dd>
        <%= @review.body %>
      </dd>

      <dt>
        Reviewer
      </dt>
      <dd>
        <% if @review.visitor.present? %>
          <a href="/users/<%= @review.reviewer_id %>">
            <%= @review.visitor.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Restaurant
      </dt>
      <dd>
        <% if @review.restaurant.present? %>
          <a href="/restaurants/<%= @review.restaurant_id %>">
            <%= @review.restaurant.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Bar
      </dt>
      <dd>
        <% if @review.bar.present? %>
          <a href="/bars/<%= @review.bar_id %>">
            <%= @review.bar.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@review.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@review.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

